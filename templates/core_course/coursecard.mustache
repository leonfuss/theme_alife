{{!
    @template core_course/coursecard

    Alife theme override for course card with circular progress indicator
}}
<div class="card course-card mx-1" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">
    <a href="{{viewurl}}" tabindex="-1">
        <div class="card-img-top courseimage-wrapper" style='background-image: url("{{{courseimage}}}");'>
            <span class="sr-only">{{fullname}}</span>
            {{! Add circular progress indicator or caret }}
            {{#hasprogress}}
                <div class="course-progress-circle" data-progress="{{progress}}" style="--progress: {{progress}};">
                    {{^progress}}00%{{/progress}}
                    {{#progress}}
                        {{progress}}%
                    {{/progress}}
                </div>
            {{/hasprogress}}
            {{^hasprogress}}
                {{! No progress tracking - show caret }}
                <div class="course-caret-circle"></div>
            {{/hasprogress}}
        </div>
    </a>
    <div class="card-body pe-1 course-info-container info" id="course-info-container-{{id}}-{{uniqid}}">
        {{#coursenumber}}
            <div class="course-number-badge">{{coursenumber}}</div>
        {{/coursenumber}}
        <div class="d-flex align-items-start">
            <div class="w-100 text-truncate">
                <a href="{{viewurl}}" class="aalink coursename me-2 mb-1">
                    {{> core_course/favouriteicon }}
                    <span class="sr-only">
                        {{#str}}aria:coursename, core_course{{/str}}
                    </span>
                    <h3 class="coursename">
                        {{{shortname}}}
                    </h3>
                </a>
                {{^visible}}
                    <div class="d-flex flex-wrap">
                        <span class="badge bg-info text-white">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
    <div class="d-flex align-items-start">
        {{$progress}}{{/progress}}
        {{$menu}}{{/menu}}
    </div>
</div>
