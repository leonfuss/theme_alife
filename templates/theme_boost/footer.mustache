<footer id="page-footer" class="alife-footer mw-100">
    <div class="alife-footer-content container-fluid py-4 d-flex align-items-end px-3 px-md-4 px-lg-5" style="min-height: 120px;">
        <div class="row w-100 align-items-baseline flex-nowrap mx-0 mb-2">
            <!-- Left side: Navigation links -->
            <div id="footer-links" class="col-12 col-sm-8 d-flex align-items-baseline ps-0 px-0">
                <nav class="footer-nav w-100">
                    <ul class="list-inline mb-0 d-flex align-items-baseline flex-wrap">
                        <li class="list-inline-item me-4">
                            <a href="/local/impressum" class="text-white text-decoration-none">
                                {{#str}}impressum, local_impressum{{/str}}
                            </a>
                        </li>
                        <li class="list-inline-item me-4">
                            <a href="/local/contact" class="text-white text-decoration-none">
                                {{#str}}contact, theme_alife{{/str}}
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="/datenschutz" class="text-white text-decoration-none">
                                {{#str}}privacy_policy, theme_alife{{/str}}
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Right side: ALIFE branding -->
            <div id="footer-alife-logo" class="col-sm-4 text-end d-none d-sm-block pe-0 px-0">
                <h1 class="mb-0 text-white fw-bold alife-footer-logo" style="font-size: 2.5rem; letter-spacing: 0.1em; line-height: 1;">
                    ALIFE
                </h1>
            </div>
        </div>

        <!-- Moodle's standard footer content (hidden but preserved for functionality) -->
        <div class="d-none">
            <div class="logininfo">
                {{{ output.login_info }}}
            </div>
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
    </div>

    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>
</footer>
