<footer id="page-footer" class="alife-footer mw-100">
    <div class="alife-footer-content container-fluid py-4 d-flex align-items-center" style="min-height: 120px;">
        <div class="row w-100 align-items-end">
            <!-- Left side: Navigation links -->
            <div id="footer-links" class="col-md-8 d-flex align-items-end">
                <nav class="footer-nav w-100 d-flex align-items-end">
                    <ul class="list-inline mb-0 d-flex align-items-end flex-wrap">
                        <li class="list-inline-item me-4 d-flex align-items-end">
                            <a href="/local/impressum" class="text-white text-decoration-none d-inline-block" style="line-height: 1.4;">
                                {{#str}}impressum, local_impressum{{/str}}
                            </a>
                        </li>
                        <li class="list-inline-item me-4 d-flex align-items-end">
                            <a href="/contact" class="text-white text-decoration-none d-inline-block" style="line-height: 1.4;">
                                {{#str}}contact, theme_alife{{/str}}
                            </a>
                        </li>
                        <li class="list-inline-item d-flex align-items-end">
                            <a href="/datenschutz" class="text-white text-decoration-none d-inline-block" style="line-height: 1.4;">
                                {{#str}}privacy_policy, theme_alife{{/str}}
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>

            <!-- Right side: ALIFE branding -->
            <div id="footer-alife-logo" class="col-md-4 text-end d-flex justify-content-end align-items-end">
                <h1 class="mb-0 text-white fw-bold alife-footer-logo d-flex align-items-end" style="font-size: 2.5rem; letter-spacing: 0.1em; line-height: 1;">
                    ALIFE
                </h1>
            </div>
        </div>

        <!-- Moodle's standard footer content (hidden but preserved for functionality) -->
        <div class="d-none">
            <div class="logininfo">
                {{{ output.login_info }}}
            </div>
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
    </div>

    <div class="footer-content-debugging footer-dark bg-dark text-light">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
        </div>
    </div>
</footer>
