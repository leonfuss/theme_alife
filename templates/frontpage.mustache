{{!
    ALIFE Theme - Custom Frontpage Template
    Extended from theme_boost/drawers with custom header and footer styling
}}
{{> theme_boost/head }}
<body {{{ bodyattributes }}} class="alife-body">
{{> core/local/toast/wrapper}}
<!-- ALIFE Header Extension - Green background extending upward -->
<div class="alife-header-extension"></div>
<div id="page-wrapper" class="d-print-block alife-page-wrapper">
    {{{ output.standard_top_of_body_html }}}
    {{> theme_boost/navbar }}
    <div id="page" data-region="mainpage" data-usertour="scroller" class="px-3 px-md-4 px-lg-5">
        <div id="topofscroll" class="main-inner">
            <div id="page-content" class="container-fluid">
                <div class="row py-3 gx-0">
                    <!-- Main content takes 2/3 of the space on desktop -->
                    <div class="col-12 col-md-8 mb-4 mb-md-0 ps-0">
                        <!-- Welcome Heading -->
                        <div class="frontpage-welcome mb-4 mt-1">
                            <h1 class="welcome-heading">
                                {{#str}}welcome, theme_alife{{/str}}
                                <span class="alife-letter-a">A</span><span class="alife-letter-l">L</span><span class="alife-letter-i">I</span><span class="alife-letter-f">F</span><span class="alife-letter-e">E</span>
                            </h1>
                        </div>

                        <!-- Action Buttons - only shown when logged in -->
                        {{#output.user_logged_in}}
                        <div class="frontpage-actions mb-5">
                            <div class="row gx-1">
                                <div class="col-auto">
                                    <a href="/my/courses.php" class="btn btn-outline-primary">
                                        {{#str}}mycourses, core{{/str}}
                                    </a>
                                </div>
                                <div class="col-auto">
                                    <a href="/course/index.php" class="btn btn-outline-primary">
                                        {{#str}}allcourses, theme_alife{{/str}}
                                    </a>
                                </div>
                                {{#has_continuelearning}}
                                    <div class="col-auto">
                                        <a href="{{{continuelearning_url}}}" class="btn btn-outline-primary">
                                            {{#str}}continuelearning, theme_alife{{/str}}
                                        </a>
                                    </div>
                                {{/has_continuelearning}}
                            </div>
                        </div>
                        <hr class="frontpage-divider mb-2">
                        {{/output.user_logged_in}}

                        <div class="container-fluid">
                            <div id="region-main-box">
                                <div id="region-main">
                                    {{{ output.main_content }}}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar takes 1/3 of the space on desktop -->
                    <div class="col-12 col-md pe-0">
                        <div id="alife-sidebar-wrapper">
                            <div class="row gx-3 gx-md-0">
                                <!-- ALIFE stands for section -->
                                <div class="col-12">
                                    <div id="alife-stands-for" class="card border-0">
                                        <div class="card-body">
                                            <h2 class="card-title text-center mb-4 fw-bold">
                                                {{#str}}alife_stands_for, theme_alife{{/str}}
                                            </h2>
                                            <div class="alife-features">
                                                <div class="alife-feature-item d-flex align-items-start mb-3">
                                                    <div class="alife-feature-icon me-3">
                                                        <img src="{{{adaptive_icon}}}" alt="" class="alife-icon">
                                                    </div>
                                                    <div class="alife-feature-text">
                                                        <h3 class="fw-medium mb-0">{{#str}}adaptive, theme_alife{{/str}}</h3>
                                                    </div>
                                                </div>
                                                <div class="alife-feature-item d-flex align-items-start mb-3">
                                                    <div class="alife-feature-icon me-3">
                                                        <img src="{{{evidence_icon}}}" alt="" class="alife-icon">
                                                    </div>
                                                    <div class="alife-feature-text">
                                                        <h3 class="fw-medium mb-0">{{#str}}evidence, theme_alife{{/str}}</h3>
                                                    </div>
                                                </div>
                                                <div class="alife-feature-item d-flex align-items-start mb-3">
                                                    <div class="alife-feature-icon me-3">
                                                        <img src="{{{effective_icon}}}" alt="" class="alife-icon">
                                                    </div>
                                                    <div class="alife-feature-text">
                                                        <h3 class="fw-medium mb-0">{{#str}}effective, theme_alife{{/str}}</h3>
                                                    </div>
                                                </div>
                                                <div class="alife-feature-item d-flex align-items-start">
                                                    <div class="alife-feature-icon me-3">
                                                        <img src="{{{up_to_date_icon}}}" alt="" class="alife-icon">
                                                    </div>
                                                    <div class="alife-feature-text">
                                                        <h3 class="fw-medium mb-0">{{#str}}up-to-date, theme_alife{{/str}}</h3>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- FAQ section - only shown when logged in -->
                                {{#output.user_logged_in}}
                                <div class="col-12 ">
                                    <div id="frontpage-faq" class="card border-0">
                                        <a href="/local/faq" class="text-decoration-none">
                                            <div class="card-body d-flex align-items-center justify-content-between">
                                                <h2 class="card-title mb-0 fw-bold text-white">
                                                    FAQ
                                                </h2>
                                                <div class="faq-arrow text-white">
                                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                        <polyline points="9 18 15 12 9 6"></polyline>
                                                    </svg>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                {{/output.user_logged_in}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> theme_boost/footer }}
    {{{ output.standard_after_main_region_html }}}
</div>
<!-- ALIFE Footer Extension - Purple background extending downward -->
<div class="alife-footer-extension"></div>
</body>
</html>
{{#js}}
M.util.js_pending('theme_boost/loader');
require(['theme_boost/loader', 'theme_boost/drawer'], function(Loader, Drawer) {
    Drawer.init();
    M.util.js_complete('theme_boost/loader');
});
{{/js}}
